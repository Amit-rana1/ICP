class Solution {
    public int longestOnes(int[] nums, int k) {
        int l=0;
        int r=0;
        int flip=k;
        int max=0;
        while(r<nums.length){

            if(nums[r]==0) flip--;
            while(flip<0 ){
                if(nums[l]==0) flip++;
                l++;
                
            }
            max=Math.max(max,r-l+1);
            r++;
        }
        return max;
    }
}
